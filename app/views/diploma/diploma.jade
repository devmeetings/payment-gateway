doctype html
html(ng-app='diploma')
    head
        link(href='https://fonts.googleapis.com/css?family=Open+Sans&subset=latin,latin-ext', rel='stylesheet', type='text/css')
        script(src="/components/angular/angular.js")
        link(rel='stylesheet', href='/components/bootstrap/dist/css/bootstrap.css')
        append css
            style.
                @media print {
                    @page {
                        size: A4 landscape;
                    }

                    .fcolor {
                        color: #000090 !important;
                    }
                }

                body {
                    margin-top: 0px;
                    margin-left: 0px;
                }

                .page {
                    padding: 0;
                    margin: 0 auto;
                    page-break-after: always;
                    font-family: 'Open Sans', sans-serif;
                    border: 1px solid #fff;
                }

                .section {border: 1px solid #fff;}

                .fb {
                    font-weight: bold;
                }

                .fi {
                    font-style: italic;
                }

                .f14x {
                    font-size: 13px;
                }

                .f16x {
                    font-size: 14px;
                }

                .f32x {
                    font-size: 32px;
                }

                .f13x {
                    font-size: 12px;
                }

                .fcolor {
                    color: #000090;
                }

                @media print {
                    .fcolor {
                        color: #000090;
                        -webkit-print-color-adjust: exact;
                    }
                }

                .mt167x {
                    margin-top: 167px;
                }

                .mt1x {
                    margin-top: 1px;
                }

                .mt56x {
                    margin-top: 56px;
                }

                .mt59x {
                    margin-top: 79px;
                }

                .mt96x {
                    margin-top: 87px;
                }

                .mt18x {
                    margin-top: 18px;
                }

                .mt50x {
                    margin-top: 67px;
                }

                .mt160 {
                    margin-top: 160px;
                }

                p {
                    margin-bottom: 0;
                }
    body(ng-controller="UsersCtrl")
        .page(ng-repeat="user in users")
            .section
                .row.mt50x
                    div
                        img.center-block(src="/img/logo.png")
                .row
                    p.text-center.f16x.mt96x Potwierdzamy uczestnictwo w DevMeetingu
                    p.text-center.fb.f32x.fcolor {{user.event.title}}
                    p.text-center.f16x.mt59x Uczestnik:
                    p.text-center.fb.f32x.fcolor(style="color: #000090;") {{user.userData.names}}
                    p.text-center.f14x.mt59x
                        strong Data:
                        | &nbsp;12 września 2015
                    p.text-center.fi.f14x.mt18x
                        strong(ng-if="user.event.substantiveContent") Zawartość merytoryczna:
                        | &nbsp;{{user.event.substantiveContent}}

                .row.mt56x
                    div
                        img.center-block(src="/img/piotr_small_line.jpg", style="width:213px;")
                    p.text-center.f13x.mt18x 12 września 2015, Piotr Zwoliński, Założyciel DevMeetings
        append scripts
            script.
                angular.module('diploma', []).controller('UsersCtrl', function ($scope) {
                    $scope.users = !{users};
                })
